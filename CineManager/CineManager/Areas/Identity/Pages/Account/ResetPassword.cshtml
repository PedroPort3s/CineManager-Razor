@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Redefinir senha";
}

<div class="row">
    <div class="w3l-login-form col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Input.Code" type="hidden" />
            <h2>@ViewData["Title"]</h2>
            <h4>Redefinir sua senha.</h4>
            <hr />
            <div class="w3l-form-group">
                <label asp-for="Input.Email"></label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input asp-for="Input.Email" placeholder="E-mail" />
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="w3l-form-group">
                <label asp-for="Input.Password"></label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input asp-for="Input.Password" placeholder="Senha" />
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="w3l-form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input asp-for="Input.ConfirmPassword" placeholder="Senha" />
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Redefinir</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
