@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}
<div class="container">
    <div class="w3l-login-form">
        <img src="~/images/logo-cm.png" />        
        <hr />
        <form id="account" method="POST">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="w3l-form-group">
                <label asp-for="Input.Email"></label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input asp-for="Input.Email" placeholder="E-mail" />
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="w3l-form-group">
                <label asp-for="Input.Password"></label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input asp-for="Input.Password" placeholder="Senha" />
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu sua senha?</a>
                </p>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>            
            <hr />
            <p class=" w3l-register-p">Ainda não tem uma conta?&nbsp;<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrar como novo usuário</a></p>

        </form>
        <hr />
        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-vertical">
            <div class="form-group">
                @{ if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <div>
                            <p>
                                Não há serviços de autenticação externos configurados
                            </p>
                        </div>
                    }
                    else
                    {
            <p class=" w3l-register-p">Use outro serviço para login.</p>
                        <p>
                            @foreach (var provider in Model.ExternalLogins)
                            {
                                <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Login usando sua @provider.DisplayName conta">@provider.DisplayName</button><br />
                            }
                        </p>
                    }
                }
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
