        <div class="col-lg-1">
            <label asp-for="ListaTelefone[0].DDI" class="control-label"></label>
            <input readonly asp-for="ListaTelefone[0].DDI" class="form-control" />
            <span asp-validation-for="ListaTelefone[0].DDI" class="text-danger"></span>
        </div>
