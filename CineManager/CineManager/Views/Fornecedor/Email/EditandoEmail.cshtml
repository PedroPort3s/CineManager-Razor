@model CineManager.Models.Email

@{
    ViewData["Title"] = "EditandoEmail";
}

<h1>EditandoEmail</h1>

<h4>Email</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditandoEmail">
            <input hidden asp-for="Id"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EnderecoEmail" class="control-label"></label>
                <input asp-for="EnderecoEmail" class="form-control" />
                <span asp-validation-for="EnderecoEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="EditandoFornecedor">Cancelar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
