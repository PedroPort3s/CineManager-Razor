@model CineManager.Models.FilmeGenTipo

@{
    ViewData["Title"] = "Excluir";
}

<h1>Excluir</h1>

<h3>Tem certeza que deseja excluir este item?</h3>
<div>
    <h4>Filme</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Filme.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Filme.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genero)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genero.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Filme.Duracao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Filme.Duracao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Filme.Lancamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Filme.Lancamento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Filme.EmCartazAte)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Filme.EmCartazAte)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoFilme)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoFilme.NomeTipoFilme)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-action="Index">Voltar</a>
    </form>
</div>
