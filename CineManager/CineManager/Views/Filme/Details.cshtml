@model CineManager.Models.Filme

@{
    ViewData["Title"] = "Detalhes";
}
<input type="hidden" asp-for="Id" id="IdFilme" />

<h1>Detalhes</h1>

<div>
    <h4>Filme</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genero)
        </dt>
        <dd class="col-sm-10">
            <a class="btn btn-success" id="btnAddGeneros" onclick="GeneroModalOpen()">Visualizar Gêneros</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Duracao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Duracao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lancamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lancamento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmCartazAte)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmCartazAte)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoFilme)
        </dt>
        <dd class="col-sm-10">
            <a class="btn btn-success" id="btnAddTipos" onclick="TipoFilmeModalOpen()">Visualizar Tipos</a>
        </dd>
    </dl>
</div>

@* Não apagar as divs, pois elas carregam as PartialView" *@

<div id="divPartialDetail"></div>
<div id="divPartialDetailTF"></div>

<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript" src="@Url.Content("~/js/FilmesDetail.js")"></script>
}


