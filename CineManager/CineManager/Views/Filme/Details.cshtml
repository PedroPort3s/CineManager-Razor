@model CineManager.Models.Filme

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<div>
    <h4>Filme</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genero)
        </dt>
        <dd class="col-sm-10">
            <table class="table table-bordered">
                @for(int i = 0; i < Model.ListaGeneros.Count; i+=3) {
                    <tr>
                        <td>
                            @if(i < Model.ListaGeneros.Count) {
                                @Model.ListaGeneros[i].Genero.Nome
                            }
                        </td>
                        <td>
                            @if (i+1 < Model.ListaGeneros.Count) {
                                @Model.ListaGeneros[i+1].Genero.Nome
                            }
                        </td>
                        <td>
                            @if (i+2 < Model.ListaGeneros.Count) {
                                @Model.ListaGeneros[i+2].Genero.Nome
                            }
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Duracao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Duracao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lancamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lancamento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmCartazAte)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmCartazAte)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoFilme)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoFilme.NomeTipoFilme)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
</div>



